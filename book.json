{
    "gitbook": ">=3.0.0",
    "title": "Clojurebridge London Workshop",
    "description": "Introducing Clojure development and the essence of functional programming",
    "structure": {
        "readme": "introduction.md"
    },
    "styles": {
        "website": "styles/website.css",
        "ebook": "styles/ebook.css",
        "pdf": "styles/pdf.css",
        "mobi": "styles/mobi.css",
        "epub": "styles/epub.css"
    },
    "plugins": [
        "callouts",
        "codeblock-disable-glossary",
        "disqus",
        "ga",
        "gist",
        "klipse",
        "sectionx",
        "simpletabs",
        "toggle-chapters",
        "toolbar",
        "youtube",
        "wide-page"
    ],
    "pluginsConfig": {
        "callouts": {
            "showTypeInHeader": false,
            "star": {
                "alert": "warning",
                "picto": "fa-star"
            }
        },
        "sectionx": {
            "tag": "b"
        },
        "disqus": {
            "shortName": "clojurebridgeln"
        },
        "ga": {
            "token": "UA-28030709-10"
        },
        "toolbar": {
            "buttons":
            [
                {
                    "label": "Clojurians Slack community",
                    "icon": "fa fa-comments-o",
                    "url": "https://clojurians.slack.com/messages/clojurebridge-london"
                },
                {
                    "label": "GitHub",
                    "icon": "fa fa-github",
                    "url": "https://github.com/ClojureBridgeLondon/workshop-content-gitbook"
                },
                {
                    "label": "Search page title on StackOverflow",
                    "icon": "fa fa-stack-overflow",
                    "url": "http://stackoverflow.com/search?q={{title}}"
                }
            ]
        }
    }
}
